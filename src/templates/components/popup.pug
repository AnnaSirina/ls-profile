script(type="text/x-template")#popup
#app
  button.menu(v-on:click='isHidden = !isHidden')
    span.menu__span
  .pop(v-if='isHidden')
    button(v-on:click='isHidden = false')
    nav.nav
      - var menu = ['Главная', 'Обо мне', 'Навыки', 'Работы', 'Отзывы', 'Связаться']
      ul.nav__list
        each item in menu
          li.nav__item
            a(href="").nav__link #{item}
    .first__links
       - var icons = ['insta', 'vk', 'github']
       ul.socials
        each item in icons
          li.socials__item
            a(href="").social__link