.profite {
  background-image: url(../images/content/profite.jpg);
  background-position: center center no-repeat;
  background-size: cover;
  position: relative;
}

.profite__pic {
  position: absolute;
  left: 0;
  bottom: -10%;

  @include tablets {
    position: absolute;
    bottom: -15%;
    left: 25%;
    transform: rotate(270deg);
  }
}

.profite__container {
  display: flex;
  justify-content: center;
  align-content: space-between;
  flex-direction: column;
  align-items: center;
}

.profite__title {
  margin: 0 auto;
  max-width: 50%;

  @include tablets {
    max-width: 70%;
    text-align: center;
  }
}

.profite__section-title {
  font-size: 30px;
  font-weight: bold;
  margin-bottom: 45px;
  color: white;

  @include tablets {
    max-width: 55%;
    margin: 0 auto 45px auto;
  }
}

.profite__desc {
  color: $text-grey;
  line-height: 1.5;
  text-align: left;

  @include tablets {
    text-align: center;
  }
}
