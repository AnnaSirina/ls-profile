.tags {
  display: flex;
  justify-content: flex-start;
  margin-bottom: 35px;

  @include tablets {
    justify-content: center;
    font-size: 15px;
  }
}

.tags__item {
  display: block;
  max-width: 33%;
  border-radius: 40%;
  text-align: center;
  margin-right: 5px;
  padding: 15px;

  &:hover {
    background: $text-grey;
    color: white;
  }

  @include tablets {
    background: $grey;
    color: $text-grey;
  }
}
