.review {
  position: relative;
  padding-top: 145px;
  padding-bottom: 195px;

  @include tablets {
    padding-top: 95px;
    padding-bottom: 145px;
    max-width: 480px;
  }
}

.review__title {
  margin-bottom: 90px;
}

.review__controls {
  position: absolute;
  top: 145px;
  left: 480px;
  max-width: 130px;
  width: 100%;

  @include tablets {
    left: 50%;
    top: 150px;
    transform: translateX(-50%);
  }
}

.review__button {
  position: relative;
  display: block;
  background-color: transparent;
  border: 2px solid #fff;
  border-radius: 50%;
  width: 50px;
  height: 50px;
}

.review__button:before {
  position: absolute;
  content: "";
  display: inline-block;
  top: 50%;
  left: 50%;
  width: 5px;
  height: 5px;
  border: 2px solid #fff;
  border-left: transparent;
  border-bottom: transparent;
  transform: rotate(45deg) translate(-50%);
}

.review__button:disabled {
  opacity: 0.3;
  cursor: default;
}

.review__button:disabled:before {
  opacity: 0.3;
}

.review__button-prev:before {
  border: 2px solid #fff;
  border-right: transparent;
  border-top: transparent;
}

.review__button:hover,
.review__button:hover:before {
  border-color: $text-grey;
}

.review__list {
  max-width: 977px;
}

.review__item {
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  position: relative;
  max-width: 474px;
  min-height: 14rem;
  width: 100%;
  padding-left: 125px;

  @include desktop {
    width: 48%;
    padding-left: 40px;
  }

  @include tablets {
    width: 100%;
    padding-left: 10px;
    padding-right: 10px;
    flex-shrink: 0;
  }
}

.review__item:before {
  position: absolute;
  left: 0;
  top: 0;
  content: "";
  display: block;
  width: 75px;
  height: 75px;

  background-image: svg-load("quote.svg", fill=#fff, width=100%, height=100%);
  background-repeat: no-repeat;
  background-size: cover;
  opacity: 0.05;

  @include desktop {
    width: 30px;
    height: 26px;
  }
}

.review__qoute {
  margin-bottom: 25px;

  font-weight: 400;
}

.review__author {
}

.review__image {
  margin-right: 30px;
  border-radius: 50%;
  width: 75px;
  height: 75px;
}

.review__name {
  color: $text-color;
  opacity: 1;
}
